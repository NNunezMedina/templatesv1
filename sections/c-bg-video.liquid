<style>
  #c-bg-video-{{ section.id }} .c-bg-video-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  aspect-ratio: 1440 / 700; /* desktop por defecto */
}

#c-bg-video-{{ section.id }} .video-desktop,
#c-bg-video-{{ section.id }} .video-mobile {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
}

#c-bg-video-{{ section.id }} .video-desktop {
  display: block;
}

#c-bg-video-{{ section.id }} .video-mobile {
  display: none;
}

@media screen and (max-width: 767px) {
  #c-bg-video-{{ section.id }} .video-desktop {
    display: none !important;
  }
  #c-bg-video-{{ section.id }} .video-mobile {
    display: block !important;
  }

  #c-bg-video-{{ section.id }} .c-bg-video-wrapper {
    aspect-ratio: 375 / 524;
  }
}

#c-bg-video-{{ section.id }} .c-bg-video-content {
  position: absolute;
  bottom: 5%;
  left: 5%;
  z-index: 2;
  text-align: left;
  color: white;
  padding: 1.5rem;
  width: 90%;
  max-width: 662px;
  display: flex;
  flex-direction: column;
  gap: {{ section.settings.gap_desktop }}rem;
}

#c-bg-video-{{ section.id }} .heading-main {
  font-size: {{ section.settings.heading_main_font_size_desktop }}rem;
  font-weight: {{ section.settings.heading_main_font_weight }};
  color: {{ section.settings.heading_main_color }};
  line-height: {{ section.settings.heading_main_font_size_desktop }}rem;
  margin: 0;
}

#c-bg-video-{{ section.id }} .subheading-top {
  font-size: {{ section.settings.subheading_top_font_size_desktop }}rem;
  font-weight: {{ section.settings.subheading_top_font_weight }};
}

#c-bg-video-{{ section.id }} .subheading-bottom {
  font-size: {{ section.settings.subheading_bottom_font_size_desktop }}rem;
  font-weight: {{ section.settings.subheading_bottom_font_weight }};
  color: {{ section.settings.subheading_bottom_color }};
  line-height: {{ section.settings.subheading_bottom_font_size_desktop }}rem;
  max-width: 500px;
  margin: 0;
}

#c-bg-video-{{ section.id }} .btn-primary {
  display: inline-flex;
  width: auto;
  justify-content: center;
  align-items: center;
  padding: 0.75rem 1.5rem;
  font-size: {{ section.settings.button_font_size_desktop }}rem;
  font-weight: {{ section.settings.button_font_weight }};
  background-color: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_text_color }};
  border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  border-radius: {{ section.settings.button_radius }}px;
  text-decoration: none;
  transition: all 0.3s ease;
  max-width: max-content;
  margin-top:4px;
}

#c-bg-video-{{ section.id }} .btn-primary:hover {
  background-color: {{ section.settings.button_background_color_hover }};
  color: {{ section.settings.button_text_color_hover }};
}

@media screen and (max-width: 767px) {
  #c-bg-video-{{ section.id }} .c-bg-video-content {
    bottom: 3%;
    left: 5%;
    padding: 1rem;
    gap: {{ section.settings.gap_mobile }}rem;
  }

  #c-bg-video-{{ section.id }} .subheading-top {
      font-size: {{ section.settings.subheading_top_font_size_mobile }}rem;
      line-height: {{ section.settings.subheading_top_font_size_mobile }}rem;
    }

    #c-bg-video-{{ section.id }} .heading-main {
    font-size: {{ section.settings.heading_main_font_size_mobile }}rem;
    line-height: {{ section.settings.heading_main_font_size_mobile }}rem;
  }

  #c-bg-video-{{ section.id }} .subheading-bottom {
    font-size: {{ section.settings.subheading_bottom_font_size_mobile }}rem;
  }

  #c-bg-video-{{ section.id }} .btn-primary {
    font-size: {{ section.settings.button_font_size_mobile }}rem;
  }
}

</style>

<section class="c-bg-video-section" id="c-bg-video-{{ section.id }}">
  <div class="c-bg-video-wrapper">
    <video 
      class="video-desktop" 
      autoplay muted loop playsinline 
      src="{{ section.settings.video_desktop.sources[0].url }}">
    </video>
    <video 
      class="video-mobile" 
      autoplay muted loop playsinline 
      src="{{ section.settings.video_mobile.sources[0].url }}">
    </video>

    <div class="c-bg-video-content">
      <span class="subheading-top">{{ section.settings.subheading_top }}</span>
      <h1 class="heading-main">{{ section.settings.heading_main }}</h1>
      <p class="subheading-bottom">{{ section.settings.subheading_bottom }}</p>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_url }}" class="btn-primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

