{%- style -%}
  #shopify-section-{{ section.id }}.header-marquee {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    font-size: 14px;
    font-weight: 500;
    overflow: hidden;
    padding: 1px;
    white-space: nowrap;
  }

  #shopify-section-{{ section.id }} .marquee-track {
    display: inline-block;
    white-space: nowrap;
    animation: scroll-left 25s linear infinite;
  }

  #shopify-section-{{ section.id }} .marquee-track h3 {
  display: inline-block;
  margin-right: {{ section.settings.text_spacing }}px;
  text-transform: uppercase;
  font-size: {{ section.settings.font_size }}px;
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
 }

  #shopify-section-{{ section.id }} .marquee-track {
  display: inline-block;
  white-space: nowrap;
  animation: scroll-left {{ section.settings.scroll_speed }}s linear infinite;
}

  @keyframes scroll-left {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{%- endstyle -%}

<section id="shopify-section-{{ section.id }}" class="header-marquee">
  <div class="marquee-track">
    {% for i in (1..10) %}
  {% if section.settings.text_one != blank %}
    <h3>{{ section.settings.text_one }}</h3>
  {% endif %}
  {% if section.settings.text_two != blank %}
    <h3>{{ section.settings.text_two }}</h3>
  {% endif %}
  {% if section.settings.text_three != blank %}
    <h3>{{ section.settings.text_three }}</h3>
  {% endif %}
{% endfor %}

  </div>
</section>

{% schema %}
{
  "name": "C Marquee Header",
  "tag": "section",
  "class": "header-marquee",
  "settings": [
    {
      "type": "text",
      "id": "text_one",
      "label": "Texto 1",
      "default": "Envío gratis a todo el Perú"
    },
    {
      "type": "text",
      "id": "text_two",
      "label": "Texto 2",
      "default": "Descuento del 15% por apertura"
    },
    {
    "type": "text",
    "id": "text_three",
    "label": "Texto 3",
    "default": "Compra segura con garantía"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#fcd34d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#1f2937"
    },
    {
  "type": "range",
  "id": "scroll_speed",
  "label": "Velocidad del marquee (segundos)",
  "min": 5,
  "max": 60,
  "step": 1,
  "default": 25
},
{
  "type": "range",
  "id": "text_spacing",
  "label": "Espacio entre textos (px)",
  "min": 4,
  "max": 100,
  "step": 1,
  "default": 64
},
{
  "type": "range",
  "id": "margin_top",
  "label": "Margen superior del texto (px)",
  "min": 1,
  "max": 100,
  "step": 1,
  "default": 1
},
{
  "type": "range",
  "id": "margin_bottom",
  "label": "Margen inferior del texto (px)",
  "min": 1,
  "max": 100,
  "step": 1,
  "default": 1
},
{
  "type": "range",
  "id": "font_size",
  "label": "Tamaño de fuente (px)",
  "min": 8,
  "max": 48,
  "step": 1,
  "default": 14
}
  ],
  "presets": [
    {
      "name": "C Header Marquee"
    }
  ]
}
{% endschema %}

